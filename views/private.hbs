<form class="" action="" method="post" enctype="multipart/form-data">
  <h1>Your Uploads here are private!</h1>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Image Name</label>
    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="What you would remember this image as">
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Description</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Describe the Image" rows="3"></textarea>
  </div>
  <div class="mb-3">
    <label for="formFileMultiple" class="form-label">Upload your Images</label>
    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
  </div>
  <div class="image-preview">
  </div>
  <button type="submit" class="submit btn btn-success" name="submit">Upload</button>
</form>
